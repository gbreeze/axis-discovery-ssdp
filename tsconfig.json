{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"outDir": "lib"
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	],
	"compileOnSave": true
}